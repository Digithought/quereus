{
	"name": "@quereus/isolation",
	"version": "0.2.1",
	"type": "module",
	"description": "Generic transaction isolation layer for Quereus virtual table modules",
	"keywords": [
		"quereus",
		"sql",
		"database",
		"transaction",
		"isolation",
		"mvcc",
		"acid",
		"virtual-table"
	],
	"publisher": "Got Choices Foundation",
	"repository": {
		"type": "git",
		"url": "https://github.com/gotchoices/quereus.git",
		"directory": "packages/quereus-isolation"
	},
	"license": "MIT",
	"main": "dist/src/index.js",
	"types": "./dist/src/index.d.ts",
	"files": [
		"dist",
		"!**/*.tsbuildinfo"
	],
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/src/index.js"
		}
	},
	"scripts": {
		"clean": "rimraf dist",
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"test": "cd ../.. && node --import ./packages/quereus-isolation/register.mjs node_modules/mocha/bin/mocha.js \"packages/quereus-isolation/test/**/*.spec.ts\" --colors",
		"test:single": "cd ../.. && node --import ./packages/quereus-isolation/register.mjs node_modules/mocha/bin/mocha.js --bail"
	},
	"peerDependencies": {
		"@quereus/quereus": "workspace:^"
	},
	"devDependencies": {
		"@quereus/quereus": "*",
		"@types/mocha": "^10.0.10",
		"@types/node": "^25.0.9",
		"chai": "^6.2.2",
		"mocha": "^11.7.5",
		"rimraf": "^6.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	}
}
