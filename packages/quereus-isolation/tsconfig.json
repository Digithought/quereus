{
	"compilerOptions": {
		"strict": true,
		"outDir": "dist",
		"allowJs": true,
		"checkJs": true,
		"target": "ES2022",
		"module": "node18",
		"lib": ["ES2023", "ES2023.Array", "DOM", "DOM.Iterable", "WebWorker", "ESNext"],
		"types": ["node", "mocha"],
		"noEmit": false,
		"noEmitOnError": true,
		"emitDeclarationOnly": false,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"composite": true,
		"isolatedModules": true,
		"removeComments": false,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node16",
		"allowImportingTsExtensions": false,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"stripInternal": true,
		"resolveJsonModule": true,
		"strictFunctionTypes": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"dist",
		"test"
	],
	"references": [
		{ "path": "../quereus" }
	],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node",
		"transpileOnly": true,
		"files": true
	}
}
