{
  "name": "@quereus/shared-ui",
  "version": "0.5.1",
  "type": "module",
  "description": "Quoomb UI Kit - Shared UI components for Quoomb applications",
  "publisher": "Got Choices Foundation",
  "repository": {
    "type": "git",
    "url": "https://github.com/gotchoices/quereus.git",
    "directory": "packages/shared-ui"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc && vite build --mode lib",
    "dev": "vite build --mode lib --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@storybook/react": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
