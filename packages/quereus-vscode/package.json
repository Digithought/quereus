{
	"name": "quereus-vscode",
	"displayName": "Quereus SQL",
	"description": "Language support for Quereus SQL: syntax, diagnostics, completions, hovers, semantic tokens",
	"version": "0.1.7",
	"icon": "images/icon.ico",
	"publisher": "GotChoicesFoundation",
	"files": [
		"client/out",
		"server/dist",
		"images",
		"syntaxes",
		"language-configuration.json",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/gotchoices/quereus.git",
		"directory": "packages/quereus-vscode"
	},
	"license": "MIT",
	"engines": { "vscode": "^1.84.0" },
	"categories": ["Programming Languages"],
	"main": "./client/out/extension.js",
	"contributes": {
		"languages": [
			{ "id": "quereus-sql", "aliases": ["Quereus SQL", "qsql"], "extensions": [".qsql", ".quereus.sql"], "configuration": "./language-configuration.json" },
			{ "id": "sql", "aliases": ["SQL"], "extensions": [".sql"] }
		],
		"grammars": [
			{ "language": "quereus-sql", "scopeName": "source.quereus", "path": "./syntaxes/quereus.tmLanguage.json" }
		]
	},
	"activationEvents": [
		"onLanguage:quereus-sql",
		"onLanguage:sql"
	],
	"scripts": {
		"clean": "rimraf client/out server/dist",
		"build:server": "esbuild ./server/src/server.ts --bundle --outfile=server/dist/server.js --external:vscode --platform=node --format=cjs",
		"build:client": "esbuild ./client/src/extension.ts --bundle --outfile=client/out/extension.js --external:vscode --platform=node --format=cjs",
		"build": "yarn run build:server && yarn run build:client",
		"package": "npx --yes @vscode/vsce package --no-yarn --no-dependencies",
		"pub:ovsx": "yarn run package && npx --yes ovsx publish --packagePath quereus-vscode-%npm_package_version%.vsix -p %OVSX_PAT%",
		"pub:vsm": "yarn run package && npx --yes @vscode/vsce publish --packagePath quereus-vscode-%npm_package_version%.vsix --pat %VSCE_PAT%",
		"lint": "echo 'No lint configured for extension'",
		"typecheck": "tsc -p server/tsconfig.json --noEmit && tsc -p client/tsconfig.json --noEmit"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@quereus/quereus": "^0.2.1",
		"@types/vscode": "^1.84.0",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3",
		"vscode-languageserver": "^9.0.1",
		"vscode-languageserver-textdocument": "^1.0.11"
	}
}


