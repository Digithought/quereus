{
  "name": "@quereus/plugin-store",
  "version": "0.3.0",
  "type": "module",
  "description": "Persistent key-value storage module for Quereus - LevelDB (Node.js) and IndexedDB (browser)",
  "keywords": [
    "quereus",
    "sql",
    "database",
    "storage",
    "leveldb",
    "indexeddb",
    "persistent",
    "virtual-table",
    "plugin"
  ],
  "publisher": "Got Choices Foundation",
  "repository": {
    "type": "git",
    "url": "https://github.com/gotchoices/quereus.git",
    "directory": "packages/quereus-plugin-store"
  },
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./common": {
      "types": "./dist/src/common/index.d.ts",
      "import": "./dist/src/common/index.js"
    },
    "./browser": {
      "types": "./dist/src/browser.d.ts",
      "import": "./dist/src/browser.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "cd ../.. && node --import ./packages/quereus-plugin-store/register.mjs node_modules/mocha/bin/mocha.js \"packages/quereus-plugin-store/test/**/*.spec.ts\" --colors",
    "test:single": "cd ../.. && node --import ./packages/quereus-plugin-store/register.mjs node_modules/mocha/bin/mocha.js --bail"
  },
  "peerDependencies": {
    "@quereus/quereus": "*"
  },
  "dependencies": {
    "classic-level": "^2.0.0"
  },
  "devDependencies": {
    "@quereus/quereus": "*",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.29",
    "chai": "^5.2.0",
    "fake-indexeddb": "^6.2.5",
    "mocha": "^11.5.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "quereus": {
    "provides": {
      "vtables": [
        "leveldb",
        "indexeddb"
      ]
    }
  }
}
