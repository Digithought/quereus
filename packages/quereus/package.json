{
  "name": "@quereus/quereus",
  "version": "0.10.1",
  "type": "module",
  "description": "Federated SQL query processor",
  "publisher": "Got Choices Foundation",
  "repository": {
    "type": "git",
    "url": "https://github.com/gotchoices/quereus.git",
    "directory": "packages/quereus"
  },
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./parser": {
      "types": "./dist/src/parser/index.d.ts",
      "import": "./dist/src/parser/index.js"
    },
    "./emit": {
      "types": "./dist/src/emit/index.d.ts",
      "import": "./dist/src/emit/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "doc": "npx typedoc -out doc src",
    "build": "tsc",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test:all": "cd ../.. && node --import ./packages/quereus/register.mjs node_modules/mocha/bin/mocha.js \"packages/quereus/test/**/*.spec.ts\" --colors",
    "test": "node test-runner.mjs",
    "test:single": "cd ../.. && node --import ./packages/quereus/register.mjs node_modules/mocha/bin/mocha.js --bail",
    "test:plans": "cd ../.. && node --import ./packages/quereus/register.mjs node_modules/mocha/bin/mocha.js \"packages/quereus/test/plan/**/*.spec.ts\" --colors",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@quereus/plugin-leveldb": "workspace:^",
    "@quereus/plugin-loader": "*",
    "@quereus/store": "workspace:^",
    "@types/chai": "^5.2.2",
    "@types/debug": "^4.1.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "chai": "^5.2.0",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "fast-check": "^4.1.1",
    "mocha": "^11.5.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "fast-json-patch": "^3.1.1",
    "inheritree": "^0.3.2",
    "moat-maker": "^2.2.0",
    "temporal-polyfill": "^0.3.0",
    "uint8arrays": "^5.1.0"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
