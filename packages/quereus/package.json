{
  "name": "@quereus/quereus",
  "version": "0.1.0",
  "type": "module",
  "description": "Federated SQL query processor inspired by SQLite",
  "main": "dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "doc": "npx typedoc -out doc src",
    "build": "tsc",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test:all": "cd ../.. && node --import ./packages/quereus/register.mjs node_modules/mocha/bin/mocha.js 'packages/quereus/test/**/*.spec.ts' --colors",
    "test": "cd ../.. && node --import ./packages/quereus/register.mjs node_modules/mocha/bin/mocha.js 'packages/quereus/test/**/*.spec.ts' --colors --bail",
    "test:single": "cd ../.. && node --import ./packages/quereus/register.mjs node_modules/mocha/bin/mocha.js --bail",
    "test:plans": "cd ../.. && node --import ./packages/quereus/register.mjs node_modules/mocha/bin/mocha.js 'packages/quereus/test/plan/**/*.spec.ts' --colors",
    "prepublishOnly": "npm run build && npm run doc",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.15.29",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "chai": "^5.2.0",
    "eslint": "^9.28.0",
    "fast-check": "^4.1.1",
    "mocha": "^11.5.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "fast-json-patch": "^3.1.1",
    "inheritree": "^0.3.2",
    "temporal-polyfill": "^0.3.0",
    "uint8arrays": "^5.1.0"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
