{
  "name": "@quereus/plugin-nativescript-sqlite",
  "version": "0.1.5",
  "type": "module",
  "description": "NativeScript SQLite storage plugin for Quereus - mobile persistent storage",
  "keywords": [
    "quereus",
    "quereus-plugin",
    "sql",
    "database",
    "storage",
    "sqlite",
    "nativescript",
    "mobile",
    "ios",
    "android",
    "kv-store",
    "persistent"
  ],
  "publisher": "Got Choices Foundation",
  "repository": {
    "type": "git",
    "url": "https://github.com/gotchoices/quereus.git",
    "directory": "packages/quereus-plugin-nativescript-sqlite"
  },
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./plugin": {
      "types": "./dist/src/plugin.d.ts",
      "import": "./dist/src/plugin.js"
    }
  },
  "peerDependencies": {
    "@nativescript-community/sqlite": "^3.0.0",
    "@quereus/quereus": "workspace:^",
    "@quereus/store": "workspace:^"
  },
  "engines": {
    "quereus": "^0.24.0"
  },
  "quereus": {
    "provides": {
      "vtables": [
        "store"
      ]
    },
    "settings": [
      {
        "key": "databasePath",
        "label": "Database Path",
        "type": "string",
        "default": "quereus.db",
        "help": "Path to the SQLite database file"
      },
      {
        "key": "moduleName",
        "label": "Module Name",
        "type": "string",
        "default": "store",
        "help": "Name to register the virtual table module under"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "cd ../.. && node --import ./packages/quereus-plugin-nativescript-sqlite/register.mjs node_modules/mocha/bin/mocha.js \"packages/quereus-plugin-nativescript-sqlite/test/**/*.spec.ts\" --colors"
  },
  "devDependencies": {
    "@quereus/quereus": "*",
    "@quereus/store": "*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.29",
    "better-sqlite3": "^12.5.0",
    "chai": "^6.2.2",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
