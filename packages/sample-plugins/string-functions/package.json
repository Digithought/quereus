{
  "name": "@quereus/quereus-plugin-string-functions",
  "version": "1.0.0",
  "type": "module",
  "description": "Additional string manipulation functions for SQL queries",
  "author": "Quereus Team",
  "keywords": ["quereus-plugin", "quereus", "functions", "strings"],
  "exports": {
    "./plugin": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "@quereus/quereus": "*"
  },
  "engines": {
    "quereus": "^0.4.0"
  },
  "quereus": {
    "provides": { "functions": ["reverse", "title_case", "repeat", "slugify", "word_count", "str_concat", "str_stats"] }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "devDependencies": {
    "@quereus/quereus": "*",
    "typescript": "^5.0.0"
  }
}
