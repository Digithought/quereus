{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/quereus-vscode"
			],
			"outFiles": [
				"${workspaceFolder}/packages/quereus-vscode/client/out/**/*.js",
				"${workspaceFolder}/packages/quereus-vscode/server/dist/**/*.js"
			]
		},
		{
			"name": "Attach to Language Server",
			"type": "node",
			"request": "attach",
			"port": 6009,
			"restart": true,
			"outFiles": [
				"${workspaceFolder}/packages/quereus-vscode/server/dist/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha - Current file",
			"runtimeExecutable": "node",
			"runtimeArgs": ["--import", "./packages/quereus/register.mjs"],
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
			"args": ["${file}", "--colors", "--bail", "--timeout", "60000"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha - All tests",
			"runtimeExecutable": "node",
			"runtimeArgs": ["--import", "./packages/quereus/register.mjs"],
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
			"args": ["packages/quereus/test/**/*.spec.ts", "--colors", "--bail", "--timeout", "60000"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	],
	"compounds": [
		{
			"name": "Extension + Server",
			"configurations": ["Run Extension", "Attach to Language Server"],
			"stopAll": true
		}
	]
}
