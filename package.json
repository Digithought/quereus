{
  "name": "quereus-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Quereus monorepo - Federated SQL query processor inspired by SQLite",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach -A run clean",
    "build": "yarn clean && yarn build:engine && yarn build:loader && yarn build:store && yarn build:sync && yarn build:ui && yarn build:plugins && yarn build:vscode && yarn build:cli && yarn build:web",
    "lint": "yarn workspaces foreach -A run lint",
    "test": "yarn workspaces foreach -A run test",
    "test:all": "yarn workspaces foreach -A run test:all",
    "dep-check": "yarn workspaces foreach -A run dep-check",
    "doc": "yarn workspaces foreach -A run doc",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "dev:web": "yarn workspace @quereus/quoomb-web dev",
    "dev:cli": "yarn workspace @quereus/quoomb-cli dev",
    "dev:cli-built": "yarn workspace @quereus/quoomb-cli build && node packages/quoomb-cli/dist/bin/quoomb.js",
    "build:web": "yarn workspace @quereus/quoomb-web build",
    "build:cli": "yarn workspace @quereus/quoomb-cli build",
    "build:engine": "yarn workspace @quereus/quereus build",
    "build:loader": "yarn workspace @quereus/plugin-loader build",
    "build:store": "yarn workspace quereus-plugin-store build",
    "build:sync": "yarn workspace quereus-plugin-sync build",
    "build:plugins": "yarn workspace @quereus/sample-plugins build",
    "build:vscode": "yarn workspace quereus-vscode build",
    "build:ui": "yarn workspace @quereus/shared-ui build",
    "preview:web": "yarn workspace @quereus/quoomb-web preview",
    "pub:quereus": "cd packages/quereus && npx bumpp --no-push && npm publish --access public --registry https://registry.npmjs.org/",
    "pub:loader": "cd packages/plugin-loader && npx bumpp --no-push && npm publish --access public --registry https://registry.npmjs.org/"
  },
  "devDependencies": {
    "bumpp": "^10.0.3",
    "esbuild": "^0.23.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.12.0"
}
