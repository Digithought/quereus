{
  "name": "@digithought/quereus",
  "version": "0.1.0",
  "type": "module",
  "description": "Federated SQL query processor inspired by SQLite",
  "main": "dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "clean": "aegir clean",
    "doc": "npx typedoc -out docs src",
    "build": "aegir build --env node",
    "lint": "aegir lint",
    "test:all": "aegir test",
    "test:node": "aegir test --target node",
    "test": "node --loader=ts-node/esm node_modules/mocha/bin/mocha.js 'test/**/*.spec.ts' --colors --bail",
    "test:single": "node --loader=ts-node/esm node_modules/mocha/bin/mocha.js --bail",
    "prepublish": "npm run build && npm run doc",
    "dep-check": "aegir dep-check"
  },
	"aegir": {
		"test": {
			"target": "node"
		}
	},
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/node": "^22.13.10",
    "aegir": "^45.1.4",
    "chai": "^4.3.10",
    "fast-check": "^4.1.1",
    "tsc-alias": "^1.8.15",

    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",

		"typedoc": "^0.28.4",

		"ts-node": "^10.9.2",

		"typescript": "^5.8.3"
  },
  "dependencies": {
    "debug": "^4.4.0",
    "inheritree": "^0.3.0",
    "fast-json-patch": "^3.1.1",
    "temporal-polyfill": "^0.3.0",
    "uint8arrays": "^5.1.0"
  }
}
